
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:orientation="vertical"
android:padding="8dp"
    android:layout_marginTop="8dp">


    <HorizontalScrollView
        android:layout_width="399dp"
        android:layout_height="135dp"
        android:background="@drawable/rounded"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/display"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            />
    </HorizontalScrollView>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:orientation="horizontal">

        <Button
            android:id="@+id/btn_deg"
            style="@style/CalcModeButton"
            android:text="DEG" />

        <Button
        android:id="@+id/btn_grad"
        style="@style/CalcModeButton"
        android:text="GRAD"/>

    <Button
        android:id="@+id/btn_rad"
        style="@style/CalcModeButton"
        android:text="-"/>

        <Button
            android:id="@+id/btn_graph"
            style="@style/graphs"
            android:text="GRAPH"
            android:textColor=" #000000"/>

</LinearLayout>





    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="6"
        android:rowCount="5">

        <!-- Row 1 -->
        <Button
            style="@style/TopFunctionButton"
            android:text="d/dx"
            android:id="@+id/shift"
            android:layout_row="0"
            android:layout_column="0"/>
        <Button
            style="@style/TopFunctionButton"
            android:text="CALC"
            android:id="@+id/alpha"
            android:layout_row="0"
            android:layout_column="1"/>
        <Button
            style="@style/TopFunctionButton"
            android:text="∫"
            android:id="@+id/left"
            android:layout_row="0"
            android:layout_column="2"/>
        <Button
            style="@style/TopFunctionButton"
            android:text="MATRIX"
            android:id="@+id/right"
            android:layout_row="0"
            android:layout_column="3"/>

        <!-- Removed the button with id="@+id/ups" -->

        <!-- Row 2 -->
        <Button
            android:id="@+id/mode"
            style="@style/TopFunctionButton"
            android:layout_width="91dp"
            android:layout_height="35dp"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_columnSpan="2"
            android:layout_marginStart="12dp"
            android:text="STAT" />

        <Button
            style="@style/TopFunctionButton"
            android:text="d/dx"
            android:id="@+id/cal"
            android:layout_row="1"
            android:layout_column="0"/>
        <Button
            style="@style/TopFunctionButton"
            android:text="CALC"
            android:id="@+id/integ"
            android:layout_row="1"
            android:layout_column="1"/>
        <Button
            style="@style/TopFunctionButton"
            android:text="∫"
            android:id="@+id/up"
            android:layout_row="1"
            android:layout_column="2"/>
        <Button
            style="@style/TopFunctionButton"
            android:text="MATRIX"
            android:id="@+id/down"
            android:layout_row="1"
            android:layout_column="3"/>
        <Button
            style="@style/TopFunctionButton"
            android:text="STAT"
            android:id="@+id/inverse"
            android:layout_row="1"
            android:layout_column="4"/>
        <Button
            style="@style/TopFunctionButton"
            android:text="COMPLX"
            android:id="@+id/logpwr"
            android:layout_row="1"
            android:layout_column="5"/>

        <!-- Row 3 -->
        <Button
            style="@style/TopFunctionButton"
            android:text="d/dx"
            android:id="@+id/by"
            android:layout_row="2"
            android:layout_column="0"/>
        <Button
            style="@style/TopFunctionButton"
            android:text="CALC"
            android:id="@+id/sqrt"
            android:layout_row="2"
            android:layout_column="1"/>
        <Button
            style="@style/TopFunctionButton"
            android:text="∫"
            android:id="@+id/sqr"
            android:layout_row="2"
            android:layout_column="2"/>
        <Button
            style="@style/TopFunctionButton"
            android:text="MATRIX"
            android:id="@+id/pwr"
            android:layout_row="2"
            android:layout_column="3"/>
        <Button
            style="@style/TopFunctionButton"
            android:text="STAT"
            android:id="@+id/log"
            android:layout_row="2"
            android:layout_column="4"/>
        <Button
            style="@style/TopFunctionButton"
            android:text="COMPLX"
            android:id="@+id/ln"
            android:layout_row="2"
            android:layout_column="5"/>

        <!-- Row 4 -->
        <Button
            style="@style/TopFunctionButton"
            android:text="d/dx"
            android:id="@+id/neg"
            android:layout_row="3"
            android:layout_column="0"/>
        <Button
            style="@style/TopFunctionButton"
            android:text="CALC"
            android:id="@+id/dms"
            android:layout_row="3"
            android:layout_column="1"/>
        <Button
            style="@style/TopFunctionButton"
            android:text="∫"
            android:id="@+id/hyp"
            android:layout_row="3"
            android:layout_column="2"/>
        <Button
            style="@style/TopFunctionButton"
            android:text="MATRIX"
            android:id="@+id/sin"
            android:layout_row="3"
            android:layout_column="3"/>
        <Button
            style="@style/TopFunctionButton"
            android:text="STAT"
            android:id="@+id/cos"
            android:layout_row="3"
            android:layout_column="4"/>
        <Button
            style="@style/TopFunctionButton"
            android:text="COMPLX"
            android:id="@+id/tan"
            android:layout_row="3"
            android:layout_column="5"/>

        <!-- Row 5 -->
        <Button
            style="@style/TopFunctionButton"
            android:text="d/dx"
            android:id="@+id/rcl"
            android:layout_row="4"
            android:layout_column="0"/>
        <Button
            style="@style/TopFunctionButton"
            android:text="CALC"
            android:id="@+id/eng"
            android:layout_row="4"
            android:layout_column="1"/>
        <Button

            style="@style/TopFunctionButton"
            android:text="("
            android:id="@+id/open"
            android:layout_row="4"
            android:layout_column="2"/>
        <Button
            style="@style/TopFunctionButton"
            android:text="MATRIX"
            android:id="@+id/close"
            android:layout_row="4"
            android:layout_column="3"/>
        <Button
            style="@style/TopFunctionButton"
            android:text="STAT"
            android:id="@+id/SandD"
            android:layout_row="4"
            android:layout_column="4"/>
        <Button
            style="@style/TopFunctionButton"
            android:text="COMPLX"
            android:id="@+id/M"
            android:layout_row="4"
            android:layout_column="5"/>
    </GridLayout>

<GridLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:columnCount="5"
    android:rowCount="4"
   >

    <!-- Row 1 -->
    <Button style="@style/NumberButton" android:text="7"
        android:id="@+id/seven"/>
    <Button style="@style/NumberButton" android:text="8"
        android:id="@+id/eight"/>
    <Button style="@style/NumberButton" android:text="9"
        android:id="@+id/nine"/>
    <Button style="@style/FunctionButton" android:text="×"
        android:id="@+id/cut"/>
    <Button style="@style/FunctionButton" android:text="÷"
        android:id="@+id/clr"/>
    <Button style="@style/NumberButton" android:text="7"
        android:id="@+id/four"/>
    <Button style="@style/NumberButton" android:text="8"
        android:id="@+id/five"/>
    <Button style="@style/NumberButton" android:text="9"
        android:id="@+id/six"/>
    <Button style="@style/FunctionButton" android:text="×"
        android:id="@+id/mul"/>
    <Button style="@style/FunctionButton" android:text="÷"
        android:id="@+id/div"/>
    <Button style="@style/NumberButton" android:text="7"
        android:id="@+id/one"/>
    <Button style="@style/NumberButton" android:text="8"
        android:id="@+id/two"/>
    <Button style="@style/NumberButton" android:text="9"
        android:id="@+id/three"/>
    <Button style="@style/FunctionButton" android:text="×"
        android:id="@+id/plus"/>
    <Button style="@style/FunctionButton" android:text="÷"
        android:id="@+id/minus"/>


    <Button style="@style/NumberButton" android:text="0"
        android:id="@+id/zero"/>
    <Button style="@style/NumberButton" android:text="."
        android:id="@+id/dot"/>
    <Button style="@style/FunctionButton" android:text="EXP"
        android:id="@+id/exp"/>
    <Button style="@style/FunctionButton" android:text="ANS"
        android:id="@+id/ans"/>
    <Button style="@style/SpecialButton" android:text="="
        android:id="@+id/equal"/>
</GridLayout>
</LinearLayout>


