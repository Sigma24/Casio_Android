<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="graphs">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">70dp</item>
        <item name="android:background">@drawable/graph</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">6dp</item>








    </style>


    <style name="CalcModeButton">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">2dp</item> <!-- Reduced margin -->
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:layout_marginBottom">6dp</item><!-- Reduced margin -->

        <item name="android:textSize">12sp</item> <!-- Increased for better readability -->
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">-0.08</item> <!-- Further reduces spacing between letters -->
        <item name="android:scaleX">0.85</item> <!-- Slightly reduce width to fit -->
        <item name="android:ellipsize">none</item>
        <item name="android:paddingStart">0dp</item> <!-- Removes extra padding -->
        <item name="android:paddingEnd">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>

    </style>



    <style name="TopFunctionButton">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:background">@drawable/button_capsule_top</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/alt_function_text</item>
    </style>

    <style name="NumberButton">
        <item name="android:layout_width">66dp</item>
        <item name="android:layout_height">41dp</item>
        <item name="android:layout_marginStart">7.1dp</item>
        <item name="android:layout_marginEnd">7.1dp</item>


        <!-- Vertical Spacing -->
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>

        <item name="android:background">@drawable/button_capsule_top</item>
        <item name="android:textColor">@color/button_text</item>
    </style>

    <style name="FunctionButton">
        <item name="android:layout_width">66dp</item>
        <item name="android:layout_height">40dp</item>

        <!-- Horizontal spacing -->
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>

        <!-- Vertical Spacing -->
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_marginBottom">9dp</item>

        <item name="android:background">@drawable/button_capsule_top</item>
        <item name="android:textColor">@color/button_blue</item>
    </style>


    <style name="SpecialButton">
        <item name="android:layout_width">66dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">7dp</item>
        <item name="android:layout_marginEnd">7dp</item>

        <!-- Vertical Spacing -->
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_marginBottom">9dp</item>
        <item name="android:background">@drawable/button_capsule_top</item>
        <item name="android:textColor">@color/button_red</item>
    </style>

    <style name="ModeButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:background">@drawable/button_capsule_top</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/alt_function_text</item>
    </style>




</resources>